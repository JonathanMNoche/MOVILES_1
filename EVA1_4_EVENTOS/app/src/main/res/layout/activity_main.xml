<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnXML"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Por XML"
        android:onClick="miClick"/>

    <Button
        android:id="@+id/btnListener"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Por Listener" />

    <Button
        android:id="@+id/btnClaseAnonima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Por Clase Anonima" />

    <Button
        android:id="@+id/btnClase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Por Clase" />
</LinearLayout>